<%= simple_form_for [:admin, @schedule], :html => { :class => "form-horizontal" } do |f| %>

  <%= f.error_notification %>

  <%= f.association :event, :autofocus => true %>
  <%= f.input :occur_at, :input_html => { :class => "span1" } %>
  <%= f.association :speaker %>
  <%= f.input :talk %>
  <%= f.input :talk_description, :input_html => { :class => "span8", :rows => 4 } %>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary loading" %>
    <%= link_to 'Cancel', admin_schedules_path, :class => "btn" %>
  </div>

<% end %>
