<div class="page-header">
  <h2>Listing schedule itens</h2>
</div>

<%= link_to 'New', new_admin_schedule_path, :class => 'btn btn-success btn-small btn-top' %>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Event</th>
      <th>Date/Time</th>
      <th>Speaker 1</th>
      <th>Speaker 2</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each_with_index do |schedule, index| %>
      <tr>
        <td class="nowrap"><%= index.next %></td>
        <td class="nowrap"><%= schedule.event %></td>
        <td class="nowrap"><%= l(schedule.occur_at, :format => :short) if schedule.occur_at %></td>
        <td><%= schedule.speaker1 %></td>
        <td><%= schedule.speaker2 %></td>
        <td class="nowrap">
          <div class="pull-right">
            <%= link_to 'Edit', [:edit, :admin, schedule], :class => 'btn btn-small' %>
            <%= link_to 'Destroy', [:admin, schedule], :class => 'btn btn-danger btn-small', :confirm => 'Tem certeza?', :method => :delete %>
          </div>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>
